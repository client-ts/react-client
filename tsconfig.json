{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "strictFunctionTypes": true,
    "sourceMap": true,
    "removeComments": false,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src"],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
